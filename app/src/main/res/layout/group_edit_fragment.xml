<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GroupEditFragment">

    <Button
        android:id="@+id/message_broadcast_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_broadcast_message"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/group_edit_fragment_button_random_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/message_broadcast_button"
        android:text="@string/random_call" />
</androidx.constraintlayout.widget.ConstraintLayout>